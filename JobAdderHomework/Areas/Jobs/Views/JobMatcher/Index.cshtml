@using JobAdderHomework.Areas.Jobs.Models
@model JobOverviewModel

@{
    ViewBag.Title = "Jobs List";
}
<h1>Current data</h1>
<p class="lead">Click the job description to find the best available candidate.</p>
<div class="row">
    <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#jobs"><h3>Jobs (click to expand)</h3></button>
    <div id="jobs" class="collapse">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Company</th>
                    <th>Skills (from most to least relevant)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var job in Model.Jobs)
                {
                    <tr>
                        <td>@Html.ActionLink(@job.Value.Name, "FindMatch", "JobMatcher", new { Area = "Jobs", jobId = job.Key }, new { }) </td>
                        <td>@job.Value.Company</td>
                        <td>@job.Value.Skills</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row">&nbsp;</div>
<div class="row">
    <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#candidates"><h3>Candidates (click to expand)</h3></button>

    <div id="candidates" class="collapse">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Skills (from most to least proficient)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var candidate in Model.Candidates)
                {
                    <tr>
                        <td>@candidate.Value.Name</td>
                        <td>@candidate.Value.SkillTags</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

